<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Tangerine">

        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    <script src="https://use.fontawesome.com/1fa2d77378.js"></script>
</head>
<body class="">
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <a class="navbar-brand" href="{{ path('product_index') }}">TestAssou</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto ">
            <li class="nav-item ">
                <a class="nav-link" href="{{ path('product_index') }}">{% trans %}Accueil{% endtrans %}<span class="sr-only">(current)</span></a>
            </li>
        </ul>
        <a href="{{ path('cart_show') }}" class="btn btn-outline-info my-2 my-sm-0" type="submit">
            <i class="fa fa-shopping-cart fa-2x" aria-hidden="true"></i>
            <span class="badge">{{ app.session.get('cart') ? app.session.get('cart').count : 0}}</span>
        </a>
        <span class="ml-2 text-info"><a href="{{ path('locale', {locale: 'fr'}) }}" class="text-info">fr</a> | <a href="{{ path('locale', {locale: 'en'}) }}" class="text-info">en</a></span>
    </div>
</nav>
<div class="container" style="margin-top: 80px">
    {% block body %}{% endblock %}
</div>
<footer class="footer fixed-bottom align-bottom bg-dark card-footer py-0">
    <span class="text-info small">Copyright &copy; Assoumani Mutabaruka - Lexik Test</span>
</footer>
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
